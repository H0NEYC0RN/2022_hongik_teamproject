using System.Collections;
using System.Collections.Generic;
using UnityEngine;

public class RandomPosition : MonoBehaviour
{
    public Vector3[] positions;
  

    // Start is called before the first frame update
    void Start()
    {
        if ( Player.position.x > 0.0f) //플레이어의 포지션에따라
        {
            int randomNumber = Random.Range(0, positions.Length); // size 칸에 따라 0~최대수 
            transform.position = positions[randomNumber];         //랜덤 넘버에 위치한다.
        }
        
    }
}
