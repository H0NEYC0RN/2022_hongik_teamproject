using System.Collections;
using System.Collections.Generic;
using UnityEngine;
using UnityEngine.UI;

public class Event_Sys : MonoBehaviour
{

    [SerializeField] GameObject Stage;
    private int Stage_num;

    [SerializeField] GameObject ESC_UI;
    [SerializeField] Text ESC_text;

    [SerializeField] GameObject PL;


    void Start()
    {
        ESC_text.text = "";
        Stage_num = Stage.GetComponent<Stage_Check>().Stage_count;
    }

    void Update()
    {
        ESC();
    }

    // ESC를 눌렀을 때, ESC_UI출력 및 Player의 Event_Count에 따라 텍스트 내용 출력
    // 가져오고 싶은 함수로 변경해서 출력값 변경하면 됨.
    void ESC()
    {
        if (Input.GetKey(KeyCode.Escape))
        {
            ESC_UI.SetActive(true);

            if (PL.GetComponent<Player_state>().Event_count == 1)
            {
                if (Stage_count = 1)
                {
                    ESC_text.text = "Stage = 1\nEvent Count = 1";
                }
                if (Stage_count = 2)
                {
                    ESC_text.text = "Stage = 2\nEvent Count = 1";
                }
                if (Stage_count = 3)
                {
                    ESC_text.text = "Stage = 3\nEvent Count = 1";
                }
            }
            if (PL.GetComponent<Player_state>().Event_count == 2)
            {
                if (Stage_count = 1)
                {
                    ESC_text.text = "Stage = 1\nEvent Count = 2";
                }
                if (Stage_count = 2)
                {
                    ESC_text.text = "Stage = 2\nEvent Count = 2";
                }
                if (Stage_count = 3)
                {
                    ESC_text.text = "Stage = 3\nEvent Count = 2";
                }
            }
            if (PL.GetComponent<Player_state>().Event_count >= 3)
            {
                if (Stage_count = 1)
                {
                    ESC_text.text = "Stage = 1\nEvent Count = 3";
                }
                if (Stage_count = 2)
                {
                    ESC_text.text = "Stage = 2\nEvent Count = 3";
                }
                if (Stage_count = 3)
                {
                    ESC_text.text = "Stage = 3\nEvent Count = 3";
                }
            }
        }
        else
        {
            ESC_UI.SetActive(false);
            ESC_text.text = "";
        }
    }
}
